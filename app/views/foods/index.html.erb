<h1>投稿一覧</h1>
<table>
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">食品</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <%= @foods.each.with_index(1) do |food, i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= food.name %></td>
        <td>
          <%= link_to "詳細", food %>
          <%= link_to "編集", edit_food_path(food) %>
          <%= link_to "削除", food, method: :delete, data: { confirm:"削除しますか？"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
